<h1>My Tasks</h1>
<div ><% @tasks.each do |task| %>
<input type= "checkbox" >
<%= link_to task.title, task_path(task)%>
<div><i class="fa-solid fa-delete-left"><%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %></i></div>
<% end %>
</div>

<%= link_to "Add a task", tasks_new_path %>
